<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/child"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp">

    <ImageView
        android:id="@+id/circle_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_inactive"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/goalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.LifeCalendar.BodyText.16.Medium"
        android:text="Здесь будет текст"
        android:layout_marginLeft="9dp"
        android:maxLength="24"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/circle_icon"
        app:layout_constraintTop_toTopOf="@id/circle_icon"
        app:layout_constraintBottom_toBottomOf="@id/circle_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>