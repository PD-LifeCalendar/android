<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goalActionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.selected_year.GoalActionFragment"
    android:background="@color/grey_50">

    <androidx.cardview.widget.CardView
        android:id="@+id/goalWindow"
        android:layout_width="328dp"
        android:layout_height="383dp"
        android:background="@color/white"
        app:cardCornerRadius="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    style="@style/TextAppearance.LifeCalendar.Subtitle.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/goal_action"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/goalNameLayout"
                style="@style/Widget.LifeCalendar.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"

                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/goal_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.LifeCalendar.MaterialComponents.TextInputEditText"
                    android:id="@+id/goalName"
                    android:layout_width="match_parent"
                    android:textColor="@color/grey_70"
                    android:layout_height="wrap_content"
                     />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descriptionLayout"
                style="@style/Widget.LifeCalendar.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/description"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/goalNameLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/Widget.LifeCalendar.MaterialComponents.TextInputEditText"
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="142dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/TextAppearance.LifeCalendar.Subtitle.Medium"
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:paddingVertical="6dp"
                android:layout_margin="16dp"
                android:background="@color/orange"
                android:text="@string/save"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toBottomOf="@id/descriptionLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/calendar"
                app:layout_constraintBottom_toTopOf="@id/saveButton"
                />

            <ImageView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/descriptionLayout"
                app:layout_constraintLeft_toRightOf="@id/bookmark"
                app:layout_constraintRight_toLeftOf="@id/clock"
                app:layout_constraintBottom_toTopOf="@id/saveButton"
                />

            <ImageView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock"
                app:layout_constraintTop_toBottomOf="@id/descriptionLayout"
                app:layout_constraintLeft_toRightOf="@id/calendar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/saveButton"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>