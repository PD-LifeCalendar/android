<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/illustration_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/illustration_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gender_label"
        style="@style/TextAppearance.LifeCalendar.Title.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/choose_gender_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/illustration_gender" />

    <LinearLayout
        android:id="@+id/male_fabWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fab_background"
        android:padding="0dp"
        app:layout_constraintEnd_toStartOf="@id/gender_space"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_space">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_male"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:elevation="0dp"
            android:scaleType="center"
            android:src="@drawable/ic_m"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="mini" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/female_fabWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fab_background"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@id/gender_space"
        app:layout_constraintTop_toBottomOf="@id/gender_space">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_female"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@android:color/white"
            android:elevation="0dp"
            android:scaleType="center"
            android:src="@drawable/ic_m"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="mini" />

    </LinearLayout>

    <Space
        android:id="@+id/gender_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_label" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_btn"
        style="@style/Widget.LifeCalendar.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>