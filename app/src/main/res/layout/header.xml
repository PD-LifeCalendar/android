<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/ava" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Алёна"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/ava"
        app:layout_constraintBottom_toBottomOf="@id/ava"
        app:layout_constraintLeft_toRightOf="@id/ava"
        style="@style/TextAppearance.LifeCalendar.Ava" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ava"
        app:layout_constraintLeft_toLeftOf="@id/ava"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_ava_line" />

</androidx.constraintlayout.widget.ConstraintLayout>