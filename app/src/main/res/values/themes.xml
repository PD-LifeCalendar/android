<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.LifeCalendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_pink</item>
        <item name="colorPrimaryVariant">@color/dark_orange_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/space_cream</item>
        <item name="colorSecondaryVariant">@color/space_cream</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/DialogTheme</item>
    </style>

    <style name="Theme.LifeCalendar" parent="Base.Theme.LifeCalendar" />

    <style name="Theme.LifeCalendar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LifeCalendar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LifeCalendar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>